[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[diff-so-fancy]
	useUnicodeRuler = false
[commit]
	gpgsign = false
[pull]
	ff = only
[includeIf "gitdir:~/dev/"]
  path = ~/.personalgitconfig
[includeIf "gitdir:~/dev/nu/"]
	path = ~/.nugitconfig
[init]
	defaultBranch = main
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
